<h1>Photogram</h1>

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          Stacey S
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post) %>
        <p class="caption"><%= post.caption %></p>
      </div>
    </div>
  <% end %>
</div>
